{
  "manifest_version": 3,
  "name": "Shopify Detector",
  "version": "1.0",
  "description": "Detects if the current page is powered by Shopify.",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
